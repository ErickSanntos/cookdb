<!doctype html>
<html>
<head>
    <title>Recipe Collection</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-cutlery"></span> Recipe Collection</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- USER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Profile</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>ID</strong>: <%= user._id %><br>
                        <strong>Email</strong>: <%= user.local.email %><br>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink Account</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Account</a>
                <% } %>

            </div>
        </div>

        <!-- RECIPE LIST -->
        <div class="col-sm-6">
          <h3>Recipes</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><strong>Recipe:</strong> <%= messages[i].name %></span>
              <span><strong>Ingredients:</strong> <%= messages[i].msg %></span>
              <span><strong>Likes:</strong> <%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a Recipe</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Recipe Name" name="name">
            <input type="text" placeholder="Ingredients and Instructions" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

    </div>

</div>

<script src="main.js"></script>

</body>
</html>
